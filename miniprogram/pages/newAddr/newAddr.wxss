/* miniprogram/pages/newAddr/newAddr.wxss */
.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}
.line {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f3f3f3;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.line text {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
}

.line picker view {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 34rpx;
}

.line input {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 34rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #1aad19;
  line-height: 100rpx;
  color: white;
  font-size: 32rpx;
  text-align: center;
}
.footer:active {
  background-color: #179b16;
  color: #a2d7a2;
}

.focused {
  border-bottom: 1px solid #1aad19;
}
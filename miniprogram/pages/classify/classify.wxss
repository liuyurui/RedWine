/* miniprogram/pages/classify/classify.wxss */

#gift-area {
  display: flex;
  flex-direction: row;
  margin-left: 60rpx;
  margin-top: 48rpx;
}

#gift-icon {
  width: 42rpx;
  height: 42rpx;
}

#gift-desc {
  font-size: 32rpx;
  color: #555555;
  margin-left: 12rpx;
}

.product{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0rpx -2rpx 0 0 #f3f3f3, 0rpx 5rpx 10rpx #f3f3f3, -2rpx 0rpx 0 0 #f3f3f3, 2rpx 0rpx 0 0 #f3f3f3;
  margin-top: 16rpx;
  background-color: #ffffff;
}

#product-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

#product-info {
  width: 100%;
  height: 60rpx;
}

#product-name {
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}

#product-prize {
  position: relative;
  right: 20rpx;
  float: right;
  font-size: 32rpx;
  color: #000000;
}

#product-area {
  margin-left: 42rpx;
  margin-right: 42rpx;
  width: 666rpx;
}

#product-sell {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
}

.minus, #plus {
  display: table-cell;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 60rpx;
  color: #333333;
}
#plus {
  color: #06bd04;
}
#plus:active, .minus:active {
  background-color: #f3f3f3;
}

.hdivider {
  width: 100%;
  height: 1px;
  background-color: #f3f3f3 ;
}

.vdivider {
  width: 1px;
  height: 100%;
  background-color: #f3f3f3;
}

#footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
}

.highlight {
  border: 2rpx solid #06bd04;
}
.gray {
  color: #e1e1e1;
}

.buy-num {
  float: right;
  top: -5rpx;
  right: -5rpx;
  background-color: #06bd04;
}
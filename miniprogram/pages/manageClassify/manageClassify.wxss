/* miniprogram/pages/manageClassify/manageClassify.wxss */
#classify-area {
  margin-left: 42rpx;
  margin-right: 42rpx;
  margin-top: 72rpx;
  width: 666rpx;
}

#classify{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 260rpx;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0rpx -2rpx 0 0 #f3f3f3, 0rpx 5rpx 10rpx #f3f3f3, -2rpx 0rpx 0 0 #f3f3f3, 2rpx 0rpx 0 0 #f3f3f3;
  margin-top: 16rpx;
  background-color: #ffffff;
}

#classify-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

#classify text {
  font-size: 30rpx;
  color: #49525f;
  margin-top: 10rpx;
}
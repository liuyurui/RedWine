/* miniprogram/pages/home/home.wxss */
.banner {
  width: 750rpx;
  height: 450rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}

#classify-area {
  margin-left: 42rpx;
  margin-right: 42rpx;
  margin-top: 72rpx;
  width: 666rpx;
}

#classify-desc{
  font-size: 34rpx;
}

#classify{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 260rpx;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0rpx -2rpx 0 0 #f3f3f3, 0rpx 5rpx 10rpx #f3f3f3, -2rpx 0rpx 0 0 #f3f3f3, 2rpx 0rpx 0 0 #f3f3f3;
  margin-top: 16rpx;
  background-color: #ffffff;
}

#classify-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

#classify text {
  font-size: 30rpx;
  color: #49525f;
  margin-top: 10rpx;
}

#user-info {
  position: top;
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 100%;
  margin-top: 72rpx;
}

#user-info button {
  font-size: 30rpx;
  color: #800080;
  font-family: KaiTi;
}

#user-info button::after {
  border: none;
}

.portrait {
  width: 120rpx;
  height: 120rpx;
  border-radius: 180rpx;
  border: 2px solid #fff;
  box-sizing: border-box;
}
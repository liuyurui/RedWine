/* miniprogram/pages/editClassify/editClassify.wxss */
.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}
.line {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f3f3f3;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.line text {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
}

.line input {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 34rpx;
}

#classify{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 360rpx;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0rpx -2rpx 0 0 #f3f3f3, 0rpx 5rpx 10rpx #f3f3f3, -2rpx 0rpx 0 0 #f3f3f3, 2rpx 0rpx 0 0 #f3f3f3;
  margin-top: 16rpx;
  background-color: #ffffff;
}

#classify-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

#classify text {
  font-size: 30rpx;
  color: #49525f;
  margin-top: 10rpx;
}

#classify-area {
  margin-left: 12rpx;
  margin-right: 12rpx;
  width: 666rpx;
}
.select-image {
  width: 100%;
  margin-top: 36rpx;
  display: flex;
  flex-direction: row;
}
.select-image text {
  font-size: 34rpx;
  line-height: 30rpx;
  margin-left: 10rpx;
}
.indicator {
  width: 6rpx;
  height: 30rpx;
  margin-left: 10rpx; 
  /* background-color: #9F79EE; */
  background-color: #800080;
}
checkbox-group {
  margin-top: 36rpx;
  font-size: 36rpx;
}
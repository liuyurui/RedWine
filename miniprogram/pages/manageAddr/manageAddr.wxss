/* miniprogram/pages/addrManage/addrManage.wxss */
.container {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.addr {
  width: 100%;
  height: 132rpx;
  border-bottom: 1px solid #f3f3f3;
  vertical-align: middle;
  padding-top: 20rpx;
}

.addr-top text {
  color: #353535;
  font-size: 34rpx;
  margin-left: 20rpx;
}

.addr-bottom text {
  color: #999999;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #1aad19;
  line-height: 100rpx;
  color: white;
  font-size: 32rpx;
  text-align: center;
}

.footer:active {
  background-color: #179b16;
  color: #a2d7a2;
}